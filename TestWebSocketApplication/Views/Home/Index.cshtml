            <div id="position8" style="width: 100px; border: none;">
                <img id="pos8" class="card-img-top" src="~/images/2C.png" alt="playing_card" ondragstart="drag(event)">
            </div>
        </div>
        
        <div class="col-2 col-md-2 col-lg-2 col-xl-2 col-sm-2"></div>
    </div>
    
    @* Bottom Player Hand *@
    <div class="row h-100 justify-content-center align-items-center" style="margin-top: 20px;">
            <div class="col-5 col-md-5 col-lg-5 col-xl-5 col-sm-5"></div>
            <div class="col-2 col-md-2 col-lg-2 col-xl-2 col-sm-2">
                <div id="playerTwoHand" class="border: none" style="width: 100px;" ondrop="drop(event)" ondragover="allowDrop(event)">
