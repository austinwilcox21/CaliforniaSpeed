        </div>
        
        <div class="col-2 col-md-2 col-lg-2 col-xl-2 col-sm-2" ondrop="drop(event)" ondragover="allowDrop(event)">
            <div id="position4" style="width: 100px; border: none;">
                <img id="pos4" class="card-img-top" src="~/images/2H.png" alt="playing_card" ondragstart="drag(event)">
            </div>
        </div>
        
        <div class="col-2 col-md-2 col-lg-2 col-xl-2 col-sm-2"></div>
    </div>
    
    @* Bottom Row Game Zone *@
    <div class="row h-100 justify-content-center align-items-center" style="margin-top: 20px;">
        
        <div class="col-2 col-md-2 col-lg-2 col-xl-2 col-sm-2"></div>
        
        <div class="col-2 col-md-2 col-lg-2 col-xl-2 col-sm-2">
            <div id="position5" style="width: 100px; border: none;" ondrop="drop(event)" ondragover="allowDrop(event)">
