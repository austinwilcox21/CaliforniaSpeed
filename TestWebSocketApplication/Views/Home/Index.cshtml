@{
    ViewData["Title"] = "Home Page";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <h1>Chat Test with Sockets</h1>
    </div>
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="userName" placeholder="Enter Name" aria-label="Recipient's username" aria-describedby="basic-addon2">
    </div>
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="userMessage" placeholder="Enter Message" aria-label="Recipient's username" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-primary" id="sendMessage" type="button">Send</button>
        </div>
    </div>
    <div class="d-flex flex-row col-12 col-md-12 col-lg-12 col-xl-12 col-sm-12">
        <ul id="messageList">
            
        </ul>
    </div>



</div>
<script src="~/js/signalr.js"></script>